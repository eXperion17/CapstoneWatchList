<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WatchListFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_completed" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_in_progress" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_planned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_planned" />
        </com.google.android.material.tabs.TabLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_watchlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>